{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动CORS代理服务器",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false,
                "group": "proxy"
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "停止CORS代理服务器",
            "type": "shell",
            "command": "./scripts/stop_dev.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "group": "proxy"
            }
        },
        {
            "label": "环境健康检查",
            "type": "shell",
            "command": "./scripts/health_check.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Flutter Clean & Get",
            "type": "shell",
            "command": "flutter",
            "args": ["clean", "&&", "flutter", "pub", "get"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Flutter Web Build",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "web", "--web-renderer", "canvaskit"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}